{
	"name": "blac-studios",
	"version": "1.0.0",
	"description": "A Portfolio based project",
	"main": "js/app.js",
	"scripts": {
		"watch:sass": "node-sass sass/main.scss css/style.css -w",
		"start": "npm-run-all watch:sass",
		"compile:sass": "node-sass sass/main.scss css/style.comp.css",
		"concat:css": "concat -o css/style.concat.css css/ionicons.css css/icomoon.css  css/style.comp.css",
		"compress:css": "node-sass css/style.concat.css css/style.css --output-style compressed",
		"concat:js": "gulp concatScripts",
		"build": "npm-run-all compile:sass concat:css compress:css concat:js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Kevin-kirago/Blac-Studios.git"
	},
	"author": "Kevin Kiragu",
	"license": "ISC",
	"devDependencies": {
		"concat": "^1.0.3",
		"node-sass": "^4.13.1",
		"npm-run-all": "^4.1.5"
	},
	"dependencies": {
		"gulp": "^4.0.2",
		"gulp-concat": "^2.6.1"
	}
}
